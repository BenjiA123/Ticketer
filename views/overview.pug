extends base

block content 
    main.main 
        .card-container
            each ticket in tickets
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`./img/tours/tour-5-2.jpg`, alt=`${ticket.ticketname}`)
                        h3.heading-tertirary
                            span= ticket.ticketname

                    .card__details
                        h4.card__sub-heading= ticket.college


                        -const trimmedDescription = `${ticket.description.substring(0, 90)}......`;

                        p.card__text= trimmedDescription
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-map-pin')
                            span= ticket.venue
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            - const date = ticket.date.toLocaleString('en-us',{day:'numeric',month:'long',year:'numeric'})
                            span= date
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-flag')
                            span= ticket.expired
                        .card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-cloud')
                            span= ticket.college

                    .card__footer
                        p
                            span.card__footer-value #{ticket.price} 
                            |
                            span.card__footer-text per person
                        p.card__ratings
                            //- span.card__footer-value 4.9
                            |
                            //- span.card__footer-text rating (21)
                        a.btn.btn--green.btn--small(href=`/ticket/${ticket.slug}`) Details

                        